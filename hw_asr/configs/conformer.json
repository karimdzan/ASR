{
    "name": "conformer",
    "n_gpu": 1,
    "preprocessing": {
      "sr": 16000,
      "spectrogram": {
        "type": "MelSpectrogram",
        "args": {
        }
      },
      "log_spec": true
    },
    "augmentations": {
      "wave": [
      ],
      "spectrogram": [
      ]
    },
    "arch": {
      "type": "Conformer",
      "args": {
        "dim": 128,
        "num_layers": 12
      }
    },
    "data": {
      "train": {
        "batch_size": 16,
        "num_workers": 4,
        "datasets": [
          {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        },
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-360",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        },
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-other-500",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
        ]
      },
      "val": {
        "batch_size": 16,
        "num_workers": 4,
        "datasets": [
          {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-clean",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        },
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-other",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
        ]
      }
    },
    "optimizer": {
      "type": "Adam",
      "args": {
        "lr": 3e-4,
        "betas": [0.9, 0.98],
        "eps": 1e-9
      }
    },
    "loss": {
      "type": "CTCLoss",
      "args": {
        "zero_infinity": true
      }
    },
    "metrics": [
      {
        "type": "ArgmaxWERMetric",
        "args": {
          "name": "WER (argmax)"
        }
      },
      {
          "type": "BeamSearchWERMetric",
          "args": {
            "name": "WER (beam)",
            "beam_size": 10
          }
      },
      {
        "type": "ArgmaxCERMetric",
        "args": {
          "name": "CER (argmax)"
        }
      },
      {
        "type": "BeamSearchCERMetric",
        "args": {
          "name": "CER (beam)",
          "beam_size": 10
        }
      }
    ],
    "lr_scheduler": {
      "type": "OneCycleLR",
      "args": {
        "steps_per_epoch": 300,
        "epochs": 51,
        "anneal_strategy": "cos",
        "max_lr": 3e-4,
        "pct_start": 0.2
      }
    },
    "trainer": {
      "epochs": 50,
      "save_dir": "saved/",
      "save_period": 5,
      "verbosity": 2,
      "monitor": "min val_loss",
      "early_stop": 100,
      "visualize": "wandb",
      "wandb_project": "asr_project",
      "len_epoch": 300,
      "grad_norm_clip": 10,
      "accum_grad": 4
    }
  }